<Page
    x:Class="ShopDB.NewUserPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShopDB"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Name="tbUserID" Text="Enter First Name"></TextBlock>
            <TextBlock Text="Enter First Name"></TextBlock>
            <TextBox Name="txtFirstName"></TextBox>
            <TextBlock Text="Enter Last Name"></TextBlock>
            <TextBox Name="txtLastName"></TextBox>
            <StackPanel Orientation="Horizontal">
                <Button Click="Cancel">Cancel</Button>
                <Button Click="Next">Continue</Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
