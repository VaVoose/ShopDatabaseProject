<Page
    x:Class="ShopDB.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
            <Image Source="/Resources/Polar Bear Badge.png" Height="200" Width="200" Margin="0,0,25,0" />

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBox x:ConnectionId='2' Name="txtUserInput"                 MaxLength="13" CharacterSpacing="75" FontWeight="ExtraBold" FontFamily="Consolas" FontSize="50" Width="500" />
                <Button x:ConnectionId='3'                  VerticalAlignment="Center" Foreground="OrangeRed" Margin="25,0,0,0" FontFamily="Segoe MDL2 Assets" FontSize="50" Content="&#xE725;"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

