<Page
    x:Class="ShopDB.UsersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShopDB"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                <Button x:ConnectionId='11'              Content="Back"  VerticalAlignment="Top" />
                <TextBox x:ConnectionId='12' Name="txtNewUserID" Width="300" PlaceholderText="New User ID" MaxLength="9"></TextBox>
                <Button x:ConnectionId='13'             Content="Add User"  VerticalAlignment="Top" />
            </StackPanel>
            <TextBox x:ConnectionId='2' x:Name="FilterByLName" Header="Last Name Search" Width="200" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,20"
                                                />
            <ListView x:ConnectionId='3' Name="UsersOutput" >
                <ListView.ItemTemplate>
                    <DataTemplate                            >
                        <StackPanel x:ConnectionId='4' Orientation="Horizontal">
                            <TextBlock x:ConnectionId='5' Name="userID" 
                                                             
                                       Width="100"
                                       Margin="0,0"/>
                            <TextBlock x:ConnectionId='6' Name="firstName" 
                                                                
                                       Width="180"
                                       Margin="0,0"/>
                            <TextBlock x:ConnectionId='7' Name="lastName" 
                                                               
                                       Width="190"/>
                            <CheckBox x:ConnectionId='8' Name="chkIsAdmin"                                                                               />
                            <Button x:ConnectionId='9'                                                Content="Edit User Certs"/>
                            <Button x:ConnectionId='10'                                                  Content="Delete"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Page>

